{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "SELF_HOSTED_API_KEY",
    "SELF_HOSTED_URL",
    "INFERIA_LLM_API_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}